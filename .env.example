# Purmemo MCP - Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# NPM Publishing Tokens
# ============================================

# Primary NPM token for publishing (granular token with 2FA)
# Used by: npm publish, GitHub Actions workflow
# Get from: https://www.npmjs.com/settings/YOUR_USERNAME/tokens
NPM_TOKEN=npm_YOUR_GRANULAR_TOKEN_HERE

# Legacy NPM token (classic token, expires Feb 2026)
# Used by: local npm commands via ~/.npmrc
# Note: Prefer using NPM_TOKEN for new workflows
NPM_TOKEN_LEGACY=npm_YOUR_LEGACY_TOKEN_HERE

# ============================================
# Purmemo API
# ============================================

# Purmemo API key for testing MCP server locally
# Get from: https://app.purmemo.ai/settings
PURMEMO_API_KEY=your_purmemo_api_key_here

# Purmemo API base URL (optional, defaults to production)
PURMEMO_API_URL=https://api.purmemo.ai

# ============================================
# GitHub
# ============================================

# GitHub Personal Access Token for gh CLI
# Used by: gh secret set, gh pr create, etc.
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE

# ============================================
# Render (Optional)
# ============================================

# Render API key for deployments
# Used by: Render MCP server management
# Get from: https://dashboard.render.com/account/settings
RENDER_API_KEY=your_render_api_key_here

# ============================================
# Supabase (Optional)
# ============================================

# Supabase project reference
# Used by: Supabase MCP tools
SUPABASE_PROJECT_REF=your_project_ref_here

# Supabase access token
# Get from: https://app.supabase.com/account/tokens
SUPABASE_ACCESS_TOKEN=sbp_YOUR_SUPABASE_TOKEN_HERE

# ============================================
# Development & Testing
# ============================================

# Node environment (development, production, test)
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=false

# Test server port
TEST_PORT=8000
